{
  "name": "tourn-grid-view",
  "version": "0.1.0",
  "description": "Render chess tournament grids in Material UI with interactive features",
  "scripts": {
    "clean": "rm -rf dist",
    "format": "prettier-eslint '**/*.{js,ts,tsx}' --write",
    "eslint": "./node_modules/.bin/eslint '**/*.{js,ts,tsx}'",
    "eslint:fix": "npm run eslint -- --fix",
    "start": "npm run clean && webpack-dev-server --mode development --env=dev",
    "transpile": "npm run clean && babel src -d dist --copy-files",
    "build": "npm run clean && webpack --mode production --env=prod && rm dist/index.html && mv dist/main.js dist/tourn-grid-view.js"
  },
  "author": {
    "name": "Anton Telechev",
    "url": "https://github.com/atelechev"
  },
  "keywords": [
    "react",
    "chess",
    "tournament",
    "grid"
  ],
  "license": "MIT",
  "dependencies": {
    "@material-ui/core": "^4.6.1",
    "d3": "^3.5.17",
    "react": "^16.11.0",
    "react-dom": "^16.11.0"
  },
  "devDependencies": {
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^3.2.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "html-webpack-plugin": "^3.2.0",
    "prettier-eslint": "^9.0.1",
    "prettier-eslint-cli": "^5.0.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.0.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0"
  }
}
